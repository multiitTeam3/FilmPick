<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 네임스페이스는 풀클래스명을 써야한다 와 DTO 타입을 변경한 후 마이바티스 config 설정파일에 매퍼 부분은 지워주고, spring-context.xml에 매퍼 스캐닝을 추가해야 한다. -->
<mapper namespace="com.multi.mini.member.model.mapper.MemberMapper">
	
	<resultMap id="memberResultMap" type="memberDTO">
	    <result property="id" column="id"/>
	    <result property="pw" column="pw"/>
	    <result property="userName" column="USERNAME"/>
	    <result property="tel" column="TEL"/>
	    <result property="role" column="ROLE"/>
	    <result property="createDate" column="CREATE_DATE"/>
	    <result property="modfiyDate" column="MODIFY_DATE"/>
	</resultMap>

	<insert id="insert" parameterType="memberDTO">
		INSERT INTO MEMBER
		(
			  ID
			, PW
			, USERNAME
			, PHONE
		)
		VALUES
		(
			  #{ id }
			, #{ pw }
			, #{ userName } 
			, #{ tel }
		)
		
	</insert>
	
	<select id="login" parameterType="memberDTO" resultMap="memberResultMap">
		SELECT *
		FROM MEMBER
		WHERE ID = #{ id }
	</select>	
	
	<select id="selectAll" parameterType="pageDTO" resultMap="memberResultMap">
		SELECT *
		FROM MEMBER
		<if test="page != null">
			ORDER BY MEMBER_NO DESC
			LIMIT #{start}, #{end}
		</if>
	</select>
	
	<select id="selectId" parameterType="String" resultMap="memberResultMap">
		SELECT *
		FROM MEMBER
		WHERE ID = #{ id }
	</select>
	
</mapper>